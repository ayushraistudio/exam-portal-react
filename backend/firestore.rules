rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is student
    function isStudent() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if contest is running
    function isContestRunning(contestId) {
      return get(/databases/$(database)/documents/contests/$(contestId)).data.status == 'running';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if isOwner(userId);
      
      // Admins can read all users
      allow read: if isAdmin();
      
      // Only admins can create new users
      allow create: if isAdmin();
    }
    
    // Contests collection
    match /contests/{contestId} {
      // Everyone can read contest details
      allow read: if isAuthenticated();
      
      // Only admins can create, update, or delete contests
      allow create, update, delete: if isAdmin();
      
      // Questions subcollection
      match /questions/{questionId} {
        // Everyone can read questions (but correct answers are filtered in the app)
        allow read: if isAuthenticated();
        
        // Only admins can create, update, or delete questions
        allow create, update, delete: if isAdmin();
      }
      
      // Answers subcollection
      match /answers/{userId} {
        // Students can only access their own answers
        allow read, write: if isOwner(userId) && isStudent();
        
        // Admins can read all answers
        allow read: if isAdmin();
        
        // Students can only create/update answers during running contests
        allow create, update: if isOwner(userId) && isStudent() && isContestRunning(contestId);
      }
      
      // Rejoin requests subcollection
      match /rejoinRequests/{userId} {
        // Students can create their own rejoin requests
        allow create: if isOwner(userId) && isStudent();
        
        // Students can read their own rejoin requests
        allow read: if isOwner(userId) && isStudent();
        
        // Admins can read and update all rejoin requests
        allow read, update: if isAdmin();
      }
      
      // Results subcollection
      match /results/{userId} {
        // Students can read their own results
        allow read: if isOwner(userId) && isStudent();
        
        // Admins can read all results
        allow read: if isAdmin();
        
        // Only the system (Cloud Functions) can create/update results
        allow create, update: if false; // Results are created by Cloud Functions only
      }
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Users can read and write their own sessions
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Admins can read all sessions
      allow read: if isAdmin();
      
      // Only the system can create sessions (via Cloud Functions)
      allow create: if false;
    }
    
    // System collections (read-only for all users)
    match /system/{document} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Logs collection (admin only)
    match /logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
